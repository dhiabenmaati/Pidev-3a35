{% extends 'BaseBackOffice.html.twig' %}

{% block content %}
    <div class="container">
    {% for msg in app.flashes('info') %}
    <div class="alert alert-success my-2" role="alert">
        {{ msg }}
    </div>
    {% endfor %}
    {% for msg in app.flashes('error') %}
    <div class="alert alert-danger my-2" role="alert">
        {{ msg }}
    </div>
    {% endfor %}
    {% if cmd != NULL %}
<div class="card" style="width: 100%">
    <h5 class="card-header">Resultat de recherche</h5>
    <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">ID Commande</dt>
        <dd class="col-sm-10">{{ cmd.id }}</dd>
        <dt class="col-sm-2">ID Client</dt>
        <dd class="col-sm-10">-</dd>
        <dt class="col-sm-2">Date de creation</dt>
        <dd class="col-sm-10">{{ cmd.datecreer|date('d/m/Y') }}</dd>
        <dt class="col-sm-2">Date de expediration</dt>
        <dd class="col-sm-10">
        {% if cmd.dateexpedirer != NULL %}
        {{ cmd.dateexpedirer|date('d/m/Y') }}
        {% else %}
        -
        {% endif %}
        </dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
        {% if cmd.status == 0 %}
            En cours de réparation
        {% elseif cmd.status == 1 %}
            En cours de laivrison
        {% else %}
            Livré
        {% endif %}
        </dd>
        <dt class="col-sm-2">Livreur</dt>
        <dd class="col-sm-10">Livreur</dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <a href="{{ path('detail_commande', { id : cmd.id }) }}" class="btn btn-info btn-sm">Détail</a>
            <a href="{{ path('modifier_commande', { id : cmd.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
            <a href="{{ path('supprimer_commande', { id : cmd.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
        </dd>
    </dl>
    </div>
</div>
{% endif %}
</div>


{% endblock %}