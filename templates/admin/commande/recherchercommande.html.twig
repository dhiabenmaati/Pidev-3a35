{% extends 'adminbase.html.twig' %}
{% block title %}User List{% endblock %}
{% block body %}
	<div class="app-container">
		<!-- begin app-nabar -->

		<!-- end app-navbar -->
		<!-- begin app-main -->
			<div
			class="app-main" id="main"> <!-- begin container-fluid -->
			<div
				class="container-fluid">
				<!-- begin row -->
				<div class="row">
					<div
						class="col-md-12 m-b-30">


					</div>

				</div>
				<!-- end row -->

				<!--start contact contant-->
				<h1 style="text-align: center">Users</h1>
				<div class="row">

					<div style="margin: auto; width: 50%; border: 2px ; padding: 10px;">
					<form method="post">
						<input type="text" name="email" style="width: 100%;">
						<div style="margin: auto; width: 50%; padding: 10px;">
						<input class="btn btn-primary" type="submit" value="recherche">
						<a class="btn btn-info"  href="{{ path('admin_user_new') }}">Create new</a>
						</div>
					</form>
    {% for msg in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ msg }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    {% endfor %}
	{% for msg in app.flashes('info') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ msg }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    {% endfor %}
		</div>
    {% if cmd != NULL %}
<div class="card" style="width: 100%">
    <h5 class="card-header">Resultat de recherche</h5>
    <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">ID Commande</dt>
        <dd class="col-sm-10">{{ cmd.id }}</dd>
        <dt class="col-sm-2">ID Client</dt>
        <dd class="col-sm-10">-</dd>
        <dt class="col-sm-2">Date de creation</dt>
        <dd class="col-sm-10">{{ cmd.datecreer|date('d/m/Y') }}</dd>
        <dt class="col-sm-2">Date de expediration</dt>
        <dd class="col-sm-10">
        {% if cmd.dateexpedirer != NULL %}
        {{ cmd.dateexpedirer|date('d/m/Y') }}
        {% else %}
        -
        {% endif %}
        </dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
        {% if cmd.status == 0 %}
            En cours de réparation
        {% elseif cmd.status == 1 %}
            En cours de laivrison
        {% else %}
            Livré
        {% endif %}
        </dd>
        <dt class="col-sm-2">Livreur</dt>
        <dd class="col-sm-10">Livreur</dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <a href="{{ path('detail_commande', { id : cmd.id }) }}" class="btn btn-info btn-sm">Détail</a>
            <a href="{{ path('modifier_commande', { id : cmd.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
            <a href="{{ path('supprimer_commande', { id : cmd.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Veuillez vous vraiment supprimer cette commande ?');">Supprimer</a>
        </dd>
    </dl>
    </div>
</div>
{% endif %}

				</div>

				<!--end contact contant-->
			</div>
			<!-- end container-fluid -->
		</div>
		<!-- end app-main -->
	</div>
{% endblock %}
