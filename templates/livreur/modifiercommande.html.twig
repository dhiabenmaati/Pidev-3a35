{% extends 'BaseBackOffice.html.twig' %}

{% block content %}
<div style="width: 90%;" class="mx-5 my-2">
    <div class="card" style="width: 100%">
        <h5 class="card-header">Modifier le status du commande</h5>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">ID Commande</dt>
                <dd class="col-sm-10">{{ cmd.id }}</dd>
                <dt class="col-sm-2">ID Client</dt>
                <dd class="col-sm-10">{{ user.id }}</dd>
                <dt class="col-sm-2">Date de creation</dt>
                <dd class="col-sm-10">{{ cmd.datecreer|date('d/m/Y') }}</dd>
                <dt class="col-sm-2">Date de expediration</dt>
                <dd class="col-sm-10">
                {% if cmd.dateexpedirer != NULL %}
                {{ cmd.dateexpedirer|date('d/m/Y') }}
                {% else %}
                -
                {% endif %}
                </dd>
                <dt class="col-sm-2">Status</dt>
                {{ form_start(form) }}
                <dd class="col-sm-10">{{ form_widget(form.status) }}</dd>
                {{ form_end(form) }}
            </dl>
        </div>
    </div>
</div>
{% endblock %}
