{% extends 'BaseBackOffice.html.twig' %}
{% block content %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Reclamation</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        IdClt
                                    </th>
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        DescRes
                                    </th>
                                    <th>
                                        StatusRec
                                    </th>
                                    <th>
                                        ReclamationAt
                                    </th>
                                    <th>
                                        ProgressAt
                                    </th>
                                    <th>
                                        ValidAt
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>
                                            {{ reclamation.Id }}
                                        </td>
                                        <td>
                                            {{ reclamation.IdClt }}
                                        </td>
                                        <td>
                                            {{ reclamation.Type }}
                                        </td>
                                        <td>
                                            {{ reclamation.DescRec }}
                                        </td>
                                        <td>
                                            {{ reclamation.StatusRec }}
                                        </td>
                                        <td>
                                            {{ reclamation.ReclamationAt  | date('Y-m-d H:i:s')}}
                                        </td>
                                        <td>
                                            {{ reclamation.ProgressAt  | date('Y-m-d H:i:s')}}
                                        </td>
                                        <td>
                                            {{ reclamation.ValidAt  | date('Y-m-d H:i:s')}}
                                        </td>
                                        <td>
                                            <a href="/reclamations/supprimer/{{ reclamation.Id }}"><button>supprimer</button></a>
                                            <br><br>
                                            <a href="/reclamations/valid/{{ reclamation.Id }}"><button>Valider</button></a>
                                            <a href="/reclamations/progress/{{ reclamation.Id }}"><button>progress</button></a>
                                            <br><br>
                                            <a href="/reponse_reclamations/reponse/{{ reclamation.Id }}"><button>Voir Reponses</button></a>
                                            <a href="/reponse_reclamations/add/{{ reclamation.Id }}"><button>repondre</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            </table>
        </div>
    </div>
{% endblock %}
