{% extends 'BaseFrontOffice.html.twig' %}

{% block title %}Panier{% endblock %}

{% block content %}
<div class="row">
	<aside class="col-lg-9">
        <div class="card">
            <table class="table table-borderless table-shopping-cart">
                <thead class="text-muted">
                    <tr class="small text-uppercase">
                        <th scope="col">Product</th>
                        <th scope="col" width="120">Quantity</th>
                        <th scope="col" width="120">Price</th>
                        <th scope="col" class="text-right" width="200"> </th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                    <tr>
	                    <td>
		                    <figure class="itemside align-items-center">
                                <div class="aside"><img src="https://via.placeholder.com/200x150" class="img-sm"></div>
                                    <figcaption class="info">
                                        <a href="#" class="title text-dark">{{ item.produit.nomprod }}</a>
                                        <p class="text-muted small">{{ item.produit.descprod }} <br> Vendeur: //nom_vendeur</p>
                                    </figcaption>
		                    </figure>
	                    </td>
	                    <td> 
                            <select class="form-control">
                                <option>{{ item.qte }}</option>
                            </select> 
	                    </td>
	                    <td> 
		                    <div class="price-wrap"> 
                                <var class="price">{{ item.produit.prixprod * item.qte }} DT</var> 
                                <small class="text-muted">{{ item.produit.prixprod }} DT Chacun</small> 
                            </div> <!-- price-wrap .// -->
	                    </td>
                        <td class="text-right"> 
                            <a data-original-title="Save to Wishlist" title="" href="" class="btn btn-info" data-toggle="tooltip"><i class="fa fa-heart"></i></a> 
                            <a href="{{ path('panier_remove', {'id' : item.produit.id}) }}" class="btn btn-danger"> Remove</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="card-body border-top">
                <p class="icontext"><i class="icon text-success fa fa-truck"></i> Free Delivery within 1-2 weeks</p>
            </div> <!-- card-body.// -->
        </div> <!-- card.// -->
	</aside> <!-- col.// -->
	<aside class="col-lg-3">
        <div class="card mb-3">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label>Have coupon?</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="" placeholder="Coupon code">
                        <span class="input-group-append"> 
                            <button class="btn btn-primary">Apply</button>
                        </span>
                    </div>
                </div>
            </form>
        </div> <!-- card-body.// -->
    </div> <!-- card.// -->

    <div class="card">
        <div class="card-body">
            <dl class="dlist-align">
                <dt>Total price:</dt>
                <dd class="text-right">$69.97</dd>
            </dl>
            <dl class="dlist-align">
                <dt>Discount:</dt>
                <dd class="text-right text-danger">- $10.00</dd>
            </dl>
            <dl class="dlist-align">
                <dt>Total:</dt>
                <dd class="text-right text-dark b"><strong>$59.97</strong></dd>
            </dl>
            <hr>
            <p class="text-center mb-3">
                <img src="../images/misc/payments.png" height="26">
            </p>
            <a href="{{ path('commande_add') }}" class="btn btn-primary btn-block"> Make Purchase </a>
            <a href="/" class="btn btn-light btn-block">Continue Shopping</a>
        </div> <!-- card-body.// -->
    </div> <!-- card.// -->
</aside> <!-- col.// -->
</div> <!-- row.// -->

{% endblock %}