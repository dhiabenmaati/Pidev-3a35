{% extends 'BaseBackOffice.html.twig' %}
{% block content %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Reponse Reclamation</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        DescRep
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for reponse_reclamation in reponse_reclamations %}
                                    <tr>
                                        <td>
                                            {{ reponse_reclamation.IdRec.id }}
                                        </td>
                                        <td>
                                            {{ reponse_reclamation.DescReponseRec }}
                                        </td>
                                        <td>
                                            <a href="/reponse_reclamations/modifier/{{ reponse_reclamation.id }}"><button>modifier</button></a>
                                            <a href="/reponse_reclamations/supprimer/{{ reponse_reclamation.id }}"><button>supprimer</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            </table>
        </div>
    </div>
{% endblock %}